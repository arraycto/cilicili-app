.main {
}

.van-ellipsis {
    letter-spacing: 1px;
    font-weight: bold;
    overflow: auto;
    text-overflow: unset;
}

.van-tabs__line {
    width: 28rpx !important;
}

swiper {
    border-radius: 20rpx !important;
}

swiper-item {
    border-radius: 20rpx !important;
}

.swiper-t {
    display: flex;
    margin-left: 37vw;
    margin-bottom: 20rpx;
}

.swiper-t-item {
    width: 15rpx;
    border-radius: 50%;
    height: 15rpx;
    background: #4e54c8;
    margin-left: 20rpx;
}

.active {
    width: 50rpx;
    border-radius: 20rpx;
}


.content {
    padding: 0 35rpx;
}

.card {
    height: 25vh;
    padding: 0 30rpx;
    margin-top: 10px;
    border-radius: 20rpx;
}

.card-image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}

.room-card {
    margin-bottom: 40rpx;
    background: #ffffff;
}

.room-card-image {
    width: 100%;
    height: 200rpx;
    border-radius: 15rpx;
}

.room-card-t {
    color: rgba(0, 0, 0, .7);
    padding-top: 3px;
    font-weight: 500;
    font-size: 24rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.room-card-d {
    padding-top: 2px;
    font-size: 20rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}