page {
    font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;

    width: 100%;

    height: 100%;

    background: #ffffff;

    --theme-background: #ffffff;

    letter-spacing: 1px !important;

    --inactive-color: #7d7e80;

    /*底部导航栏选中时颜色*/
    --tabbar-item-active-color: #4e54c8;

    /*通用阴影效果*/
    --box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);

    /*毛玻璃效果背景颜色*/
    --ground-glass-color: rgba(245, 246, 247, .75);

    /*毛玻璃效果高斯模糊*/
    --ground-glass-filter: saturate(180%) blur(20px);

}

/*隐藏scroll-view滚动条*/
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
